@model WebApplication2.Models.Submission

@{
    ViewBag.Title = "Delete submissions";
}

<center>
    <h2>Delete submissions</h2>
</center>
<h3>Are you sure you want to delete this?</h3>
<div>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.SubName)
        </dt>

        <dd>
            @Model.SubName
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.SubDescription)
        </dt>

        <dd>
            @Model.SubDescription.ToString()
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Closure_date)
        </dt>

        <dd>
            @Model.Closure_date.ToString()
            
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Final_closure_date)
        </dt>

        <dd>
            @Model.Final_closure_date.ToString()
        </dd>

    </dl>

    @using (Html.BeginForm()) {
        @Html.AntiForgeryToken()

        <div class="form-actions no-color">
            <input type="submit" value="Delete" class="btn btn-danger" /> |
            @Html.ActionLink("Back to List", "Index","Submisstions", new {@class="btn btn-primary"})
        </div>
    }
</div>
